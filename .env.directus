# Directus base
KEY=change-me-random-32-bytes-min
SECRET=change-me-also-32-bytes-min
PUBLIC_URL=http://localhost:${DIRECTUS_PORT:-8055}

# Point Directus at the MySQL service + DB we created
DB_CLIENT=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=directus
DB_USER=directus
DB_PASSWORD=directuspass

# Bootstrap admin user (first-run only)
ADMIN_EMAIL=admin@directus.local
ADMIN_PASSWORD=admin123
ADMIN_FIRSTNAME=Admin
ADMIN_LASTNAME=User

# Optional: enable dev stuff
LOG_LEVEL=debug
WEBSOCKETS_ENABLED=true
