COMPOSE_PROJECT_NAME=statamic
TZ=Australia/Melbourne

# First run will auto-install Laravel into ./app if empty
AUTO_INSTALL=1
LARAVEL_VERSION=

# Ports
DEV_HTTP_PORT=8082
PHPMYADMIN_PORT=8083

# Database credentials (must match app/.env DB_* after bootstrap)
MYSQL_ROOT_PASSWORD=root
MYSQL_DATABASE=appdb
MYSQL_USER=appuser
MYSQL_PASSWORD=apppass
